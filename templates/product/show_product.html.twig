{% extends 'base.html.twig' %}

{% block title %}Product detail{% endblock %}

{% block body %}
<main>
    <div class="productContainer">
        <div class="productHeader">
            <h1 class="productTitle">{{ product.label }}</h1>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('edit_product', {'id': product.id}) }}" class="btn editBtn"><i class="fa-solid fa-pen-to-square"></i></a>
            {% endif %}
        </div>
        
        <section class="productMain">
            <div class="productGallery">
                <div class="galleryMenu">
                    <figure class="thumbnail">
                        <img src="" alt="Picture of the product">
                    </figure>

                    <figure class="thumbnail">
                        <img src="" alt="Picture of the product">
                    </figure>

                    <figure class="thumbnail">
                        <img src="" alt="Picture of the product">
                    </figure>
                </div>

                <figure class="mainImg">
                    <img src="" alt="Picture of the product">
                </figure>
            </div>
            
            <div class="productInfo">
                <ul>
                    <li>
                        <b>Rating : </b> <i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i>
                        <div id="globalRating">{{ product.globalRating }}</div>
                    </li>

                    <li>
                        <b>Price : </b>{{ product.price }} $
                    </li>
                
                    <li>
                        <b>Availability : </b>
                        {% if product.inStock == true %}
                            In stock
                        {% else %}
                            Out of stock
                            {% if product.restockDelay %}
                                <p>Restocking in approximatively : {{ product.restockDelay }} days</p>
                            {% endif %}
                        {% endif %}
                    </li>
                </ul>

                <a href="{{ path('add_item', {'productId': product.id}) }}" class= "addToCartBtn btn">
                    <i class="fa-solid fa-arrow-right"></i>
                    <i class="fa-solid fa-cart-shopping"></i>
                    <br>
                    Add to cart
                </a>

                <a href="{{ path('new_review', {'productId': product.id}) }}" class="neutralBtn btn">
                    Review this product
                </a>
                
            </div>
        </section>

        <section class="productDesc">
            <p class="description">
                {{ product.description }}
            </p>
            
            <table class="specs">
                <tbody>
                    {% for key, spec in specs %}
                        <tr>
                            <td>{{ key }} :</td>
                            <td>{{ spec}}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </section>

        <section class="productReviews">
            {% for review in product.reviews %}
                <div class="review">
                    <h3>{{ review.title }}</h3>
                    <p>
                        {{ review.content }}
                    </p>
                    <p>
                        By : {{ review.author }}
                    </p>
                </div>
            {% endfor %}
        </section>

            
    </div>
</main>
{% endblock %}