{% extends 'base.html.twig' %}

{% block title %}Product detail{% endblock %}

{% block body %}
<main>
    <div class="productContainer">
        <div class="productHeader">
            <h1 class="productTitle">{{ product.label }}</h1>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('edit_product', {'id': product.id}) }}" class="btn editBtn"><i class="fa-solid fa-pen-to-square"></i></a>
                <a href="{{ path('delete_product', {'id': product.id}) }}" class="btn deleteBtn"><i class="fa-solid fa-trash"></i></a>
            {% endif %}
        </div>
        
        <section class="productMain">
            <div class="productGallery">
                <div class="galleryMenu">
                    <figure class="thumbnail">
                        <img src="" alt="Picture of the product">
                    </figure>

                    <figure class="thumbnail">
                        <img src="" alt="Picture of the product">
                    </figure>

                    <figure class="thumbnail">
                        <img src="" alt="Picture of the product">
                    </figure>
                </div>

                <figure class="mainImg">
                    <img src="" alt="Picture of the product">
                </figure>
            </div>
            
            <div class="productInfo">
                <div class="infoList">
                    <div>
                        <b>Rating : </b>
                        <a href="#reviewSection">
                        <div class="productStars"> 
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                        </div>
                        </a>

                        <div id="globalRating" class="hidden">{{ product.globalRating }}</div>
                    </div>

                    <div>
                        <b>Price : </b>{{ product.price }} $
                    </div>
                
                    <div>
                        <b>Availability : </b>
                        {% if product.inStock == true %}
                            In stock
                        {% else %}
                            Out of stock
                            {% if product.restockDelay %}
                                <p>Restocking in approximatively : {{ product.restockDelay }} days</p>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>

                <a href="{{ path('addProduct_ToCart', {'productId': product.id}) }}" class= "addToCartBtn btn">
                    <i class="fa-solid fa-arrow-right"></i>
                    <i class="fa-solid fa-cart-shopping"></i>
                    <br>
                    Add to cart
                </a>
                
            </div>
        </section>

        <section class="productDesc">
            <h2>Description</h2>
            <p class="description">
                {{ product.description }}
            </p>
            
            <div class="productSpecs">
                <h2>Specifications</h2>
                <table class="specs">
                    <tbody>
                        {% for key, spec in specs %}
                            <tr>
                                <td>{{ key }} :</td>
                                <td>
                                    {% if spec is iterable %}
                                        <ul>
                                        {% for item in spec %}
                                            <li>{{ item }}</li>
                                        {% endfor %}
                                        </ul>
                                    {% else %}
                                        {{ spec }}
                                    {% endif %}
                                    
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>

        <section class="productReviews" id="reviewSection">
            <div class="reviewsHeader">
                <h2>User reviews</h2>

                <a href="{{ path('new_review', {'productId': product.id}) }}" class="neutralBtn btn">
                    Review this product
                </a>
            </div>
            
            {% for review in product.reviews %}
                <div class="review">
                    <h3>{{ review.title }}</h3>
                    <div class="reviewStars">
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                    </div>

                    <div class="reviewRating hidden">
                        {{ review.rating }}
                    </div>
                    <p>
                        {{ review.content }}
                    </p>
                    <p>
                        By : <b>{{ review.author }}</b>
                    </p>
                </div>
            {% endfor %}
        </section>
            
    </div>
</main>
{% endblock %}