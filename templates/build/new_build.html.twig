{% extends 'base.html.twig' %}

{% block title %}Add a new prebuilt PC{% endblock %}

{% block body %}
<main>
    <ul class="breadcrumb">
        <li><a href="{{ path('app_home') }}">Home</a></li>
        <li>
            {% if edit %}
                Build edit
            {% else %}
                New build
            {% endif %}
        </li>
    </ul>
        
    
    <h1 class="mainTitleAlt">Create a new PC build</h1>

    <div class="formContainer">

        {{ form_start(formBuild) }}

{# ------------------------------------------------------------------------------------------------------------------------------------#}
            
            <div class="formSegment" id="segment1">
                <h2>Core components :</h2>

                {{ form_row(formBuild.cpu) }}
                {{ form_row(formBuild.cpuCooler) }}
                {{ form_row(formBuild.motherboard) }}
                {{ form_row(formBuild.memory) }}
                {{ form_row(formBuild.graphicsCard) }}
                {{ form_row(formBuild.storage) }}
                {{ form_row(formBuild.powerSupply) }}
                {{ form_row(formBuild.case) }}
            </div>

             
            <div class="formSegment" id="segment2">
                <h2>Optional components :</h2>

                {{ form_row(formBuild.opticalDrive) }}
                {{ form_row(formBuild.wiredNetworkCard) }}
                {{ form_row(formBuild.wirelessNetworkCard) }}
                {{ form_row(formBuild.soundCard) }}
                {{ form_row(formBuild.caseFan) }}
            </div>

            
            <div class="formSegment" id="segment3">
                <h2>Software</h2>

                {{ form_row(formBuild.operatingSystem) }}
            </div>

            
            <div class="formSegment" id="segment4">
                <h2>Services</h2>

                {{ form_row(formBuild.service) }}
            </div>
{# ------------------------------------------------------------------------------------------------------------------------------------- #}
            <div class="formSegment" id="segment5">
                {{ form_row(formBuild.name) }}

                {% if is_granted('ROLE_ADMIN') %}
                    <div class="custom-checkbox">
                        <label>{{ form_label(formBuild.prebuilt) }}</label>
                        {{ form_widget(formBuild.prebuilt) }}
                    </div>
                {% endif %}

                {{ form_row(formBuild.save) }}
            </div>
            
        {{ form_end(formBuild) }}
    </div>
</main>

{% endblock %}
