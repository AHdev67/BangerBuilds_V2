{% extends 'base.html.twig' %}

{% block title %}Add a new prebuilt PC{% endblock %}

{% block body %}
<main>
    {% if edit %}
        <a href="{{ path('show_build', {'buildId': build.id}) }}" class="returnBtn btn">
            <i class="fa-solid fa-arrow-left"></i> Cancel edit
        </a>
    {% else %}
        <a href="{{ path('app_home') }}" class="returnBtn btn">
            <i class="fa-solid fa-arrow-left"></i> Return to homepage
        </a>
    {% endif %}

    <h1 style="margin-top: 50px;">Create a new PC build</h1>

    < class="formContainer">

        {{ form_start(formBuild) }}

{# ------------------------------------------------------------------------------------------------------------------------------------#}

            
            <div class="formSegment">
                <h2>Core components :</h2>

                {{ form_row(formBuild.cpu) }}
                {{ form_row(formBuild.cpuCooler) }}
                {{ form_row(formBuild.motherboard) }}
                {{ form_row(formBuild.memory) }}
                {{ form_row(formBuild.graphicsCard) }}
                {{ form_row(formBuild.storage) }}
                {{ form_row(formBuild.powerSupply) }}
                {{ form_row(formBuild.case) }}
            </div>

            
            <div class="formSegment">
                <h2>Optional components :</h2>

                {{ form_row(formBuild.opticalDrive) }}
                {{ form_row(formBuild.wiredNetworkCard) }}
                {{ form_row(formBuild.wirelessNetworkCard) }}
                {{ form_row(formBuild.soundCard) }}
                {{ form_row(formBuild.caseFan) }}
            </div>

            
            <div class="formSegment">
                <h2>Software</h2>

                {{ form_row(formBuild.operatingSystem) }}
            </div>

            
            <div class="formSegment">
                <h2>Services</h2>

                {{ form_row(formBuild.service) }}
            </div>
{# ------------------------------------------------------------------------------------------------------------------------------------- #}
            {# {{ form_row(formBuild.buildComponents) }} #}

            {{ form_row(formBuild.name) }}

            {% if is_granted('ROLE_ADMIN') %}
                {{ form_row(formBuild.prebuilt) }}
            {% endif %}
                    
        {{ form_end(formBuild) }}
    </div>
</main>

{% endblock %}
